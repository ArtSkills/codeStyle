<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Artskills PHPMD rule set"
		 xmlns="http://pmd.sf.net/ruleset/1.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
		 xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
	<description>Правила кодирования ArtSkills с набором наших особых проверок!</description>

	<rule name="FunctionRule"
		  message = 'Метод "{0}" не CamelCase.'
		  class="Codestyle\Method\CamelCaseMethodName"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Публичные обычные и абстрактные методы запрещены: "{0}".'
		  class="Codestyle\Method\DeprecateMethodMix"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Для методов обязателен PHPDoc комментарий: "{0}".'
		  class="Codestyle\Method\MethodDocComment"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Свойство "{0}" не camelCase.'
		  class="Codestyle\Property\CamelCasePropertyName"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Публичные свойства запрещены: "{0}".'
		  class="Codestyle\Property\DeprecatePublicProperty"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Для свойств обязателен PHPDoc комментарий: "{0}".'
		  class="Codestyle\Property\PropertyDocComment"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Отсутствует инициализация свойства: "{0}".'
		  class="Codestyle\Property\PropertyInitialize"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Для функций обязателен PHPDoc комментарий: "{0}".'
		  class="Codestyle\PhpFunction\FunctionDocComment"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Переменная "{0}" не camelCase.'
		  class="Codestyle\Variable\CamelCaseVariableName"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Глобальные пременные запрещены: "{0}".'
		  class="Codestyle\Variable\DeprecateGlobalVariable"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Класс "{0}" находится в файле с другим названием.'
		  class="Codestyle\PhpClass\ClassFileName"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule name="FunctionRule"
		  message = 'Константа "{0}" - недопустимые символы (A-Z_).'
		  class="Codestyle\PhpClass\UpperCaseConstantName"
		  externalInfoUrl="http://artskills.ru/phpmd/rules.html#functionrule">

		<priority>1</priority>
	</rule>

	<rule ref="rulesets/codesize.xml">
		<exclude name="ExcessiveClassLength" />
	</rule>

	<rule ref="rulesets/codesize.xml/ExcessiveClassLength">
		<priority>1</priority>
		<properties>
			<property name="minimum" value="2000" />
		</properties>
	</rule>

	<rule ref="rulesets/controversial.xml">
		<exclude name="CamelCaseMethodName" />
		<exclude name="CamelCasePropertyName" />
		<exclude name="CamelCaseVariableName" />
	</rule>
	<rule ref="rulesets/design.xml" />
	<rule ref="rulesets/naming.xml" />
	<rule ref="rulesets/unusedcode.xml" />
</ruleset>
